<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_stock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StockFragment">


    <EditText
        android:id="@+id/symbol_input"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Type Ticker Symbol"
        android:inputType="textCapCharacters"
        app:layout_constraintBottom_toTopOf="@+id/stock_portfolio"
        app:layout_constraintEnd_toStartOf="@+id/add_stock_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/emblema_one"
        android:text="Stock Portfolio"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/add_stock_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_stock_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text=" add stock"
        app:layout_constraintBottom_toBottomOf="@+id/symbol_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/symbol_input"
        app:layout_constraintTop_toTopOf="@+id/symbol_input" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stock_portfolio"
        android:layout_width="416dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_stock_button"
        tools:listitem="@layout/row_item" />


</androidx.constraintlayout.widget.ConstraintLayout>